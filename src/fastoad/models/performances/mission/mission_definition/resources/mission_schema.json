{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/product.schema.json",
  "title": "FAST-OAD mission files",
  "description": "Schema for FAST-OAD mission files",
  "type": "object",
  "definitions": {
    "parameter_value": {
      "type": [
        "number",
        "string",
        "null",
        "object"
      ],
      "properties": {
        "value": {
          "type": [
            "number"
          ]
        },
        "unit": {
          "type": "string",
          "default": null
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "segment": {
      "type": "object",
      "description": "Specification of a flight segment",
      "properties": {
        "segment": {
          "type": "string"
        },
        "target": {
          "type": "object"
        }
      },
      "required": [
        "segment"
      ],
      "additionalProperties": true
    },
    "route_defs": {
      "parts": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "phase": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "route_cruise_type": {
      "description": "Flight segment that simulates cruise",
      "type": "object",
      "properties": {
        "cruise_type": {
          "type": "string",
          "enum": [
            "cruise",
            "optimal_cruise"
          ]
        },
        "engine_setting": {
          "enum": [
            "takeoff",
            "climb",
            "cruise",
            "idle"
          ]
        },
        "polar": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "missions": {
      "description": "Section where missions are defined.",
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "parts": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "route": {
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "phase": {
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "reserve": {
                      "type": "object",
                      "properties": {
                        "ref": {
                          "type": "string"
                        },
                        "multiplier": {
                          "type": [
                            "number",
                            "string"
                          ]
                        }
                      }
                    }
                  }
                }
              ]
            }
          }
        },
        "required": [
          "parts"
        ]
      }
    },
    "routes": {
      "description": "Section where flight routes are defined.",
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "range": {
            "$ref": "#/definitions/parameter_value"
          },
          "climb_parts": {
            "$ref": "#/definitions/route_defs/parts"
          },
          "descent_parts": {
            "$ref": "#/definitions/route_defs/parts"
          },
          "cruise_part": {
            "type": "object",
            "properties": {
              "cruise_part": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "required": [
          "range"
        ],
        "additionalProperties": false
      }
    },
    "phases": {
      "description": "Section where flight routes are defined.",
      "additionalProperties": {
        "type": "object",
        "description": "Specification of a flight phase",
        "additionalProperties": true,
        "properties": {
          "parts": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/segment"
            }
          }
        },
        "required": [
          "parts"
        ]
      }
    }
  },
  "required": [
    "missions",
    "routes"
  ],
  "additionalProperties": false
}